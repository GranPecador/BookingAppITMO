<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/purple_200"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/restaurant_text_view_user_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ресторан"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_reservation_text_view_user_item"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="id: "
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/restaurant_text_view_user_item"/>

        <TextView
            android:id="@+id/table_number_text_view_user_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="стол"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/id_reservation_text_view_user_item"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_text_view_user_item" />

        <TextView
            android:id="@+id/start_reservation_time_text_view_user_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c "
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_reservation_text_view_user_item" />

        <TextView
            android:id="@+id/end_reservation_time_text_view_user_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="до"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/start_reservation_time_text_view_user_item"
            app:layout_constraintTop_toBottomOf="@+id/table_number_text_view_user_item" />

        <TextView
            android:id="@+id/order_reservation_text_view_user_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="заказ"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_reservation_time_text_view_user_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>